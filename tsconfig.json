{
  "compilerOptions": {
    "target": "ES2022",
    "module": "esnext",
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "node",
    "incremental": true,
    "maxNodeModuleJsDepth": 5,
    "noEmit": true,
    "isolatedModules": true,
    "allowJs": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": true,
    "allowSyntheticDefaultImports": true,
    "noUnusedLocals": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@flowx/ui": ["./packages/ui/*"],
      "@flowx/eslint-config-flowx": ["./packages/eslint-config-flowx/*"],
      "@flowx/blueprints": ["./packages/blueprints/*"],
      "@flowx/task-runner": ["./packages/task-runner/*"],
      "@flowx/oauth2": ["./packages/oauth2/*"],
      "@flowx/service-adapter": ["./packages/service-adapter/*"],
      "@flowx/wasm-crypto": ["./packages/wasm-crypto/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
